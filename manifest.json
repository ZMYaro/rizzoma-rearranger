{
	"manifest_version": 2,
	"name": "Rizzoma Rearranger",
	"version": "1.0",
	"description": "Rearranges and cleans up the Rizzoma interface for a better experience.",
	"icons": {
	},
	
	"permissions": [
		"*://rizzoma.com/topic/*",
		"*://pre.rizzoma.com/topic/*"
	],
	
	"content_scripts": [{
		"matches": [
			"*://rizzoma.com/topic/*",
			"*://pre.rizzoma.com/topic/*"
		],
		"css": ["rearranger.css"]
	}]
}
